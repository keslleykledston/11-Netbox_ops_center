## Base .env (docker + backend + hub)
## Use .env.local for machine-specific overrides.

# Frontend (Vite)
VITE_USE_BACKEND=true
VITE_API_URL=/api
VITE_HUB_API_URL=/hub-api

# Frontend proxies (Vite)
API_SERVER_URL=http://localhost:4000
SNMP_SERVER_URL=http://localhost:3001

# Database (Postgres / Docker)
DATABASE_URL=postgresql://netbox_ops:netbox_ops@db:5432/netbox_ops

# Server
PORT=4000
JWT_SECRET=change_me
CRED_ENCRYPTION_KEY=change_me

# NetBox
NETBOX_URL=https://netbox.example.com
NETBOX_TOKEN=changeme
NETBOX_TENANT_GROUP_FILTER=K3G Solutions

# Jumpserver
JUMPSERVER_URL=https://js.k3gsolutions.com.br
JUMPSERVER_USERNAME=k3g_ia
JUMPSERVER_PASSWORD=#100784KyK_
JUMPSERVER_TOKEN=

# NetBox custom field (slug) para armazenar o ID do Jumpserver
NETBOX_JUMPSERVER_ID_FIELD=JS_DEVICE_ID

# Movidesk
MOVIDESK_API_URL=https://api.movidesk.com/public/v1
MOVIDESK_TOKEN=changeme
MOVIDESK_SYNC_INTERVAL=600
MOVIDESK_SYNC_ENABLED=true
MOVIDESK_WEBHOOK_AUTO_CREATE=false

# LibreNMS
LIBRENMS_URL=http://librenms:8000
LIBRENMS_API_TOKEN=changeme
LIBRENMS_SNMP_COMMUNITY=public
LIBRENMS_POLL_INTERVAL_MS=300000
AUTO_LIBRENMS_POLL=true

# Oxidized integration
OXIDIZED_API_URL=http://oxidized:8888
# Caminho do router.db (host)
OXIDIZED_ROUTER_DB=/etc/oxidized/router.db

# SNMP gateway
SNMP_SERVER_PORT=3001
SNMP_MAX_REPETITIONS=20
SNMP_GLOBAL_TIMEOUT_MS=60000

# ASN Lookup Configuration
ASN_LOOKUP_ENABLED=true
# URL customizada para lookup de ASN (opcional). Use {asn} como placeholder
ASN_LOOKUP_URL=
