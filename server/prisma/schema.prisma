generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  description  String?
  tenantGroup  String?
  users        User[]
  devices      Device[]
  applications Application[]
  discoveredInterfaces DiscoveredInterface[]
  discoveredBgpPeers   DiscoveredBgpPeer[]
  sshSessions  SshSession[]
  oxidizedProxies OxidizedProxy[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  username     String?
  passwordHash String
  role         String    @default("user")
  isActive     Boolean   @default(true)
  mustResetPassword Boolean @default(false)
  tenantId     Int?
  tenant       Tenant?   @relation(fields: [tenantId], references: [id])
  sshSessions  SshSession[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Device {
  id            Int      @id @default(autoincrement())
  tenantId      Int
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
  name          String
  hostname      String?
  ipAddress     String
  deviceType    String   @default("router")
  manufacturer  String
  platform      String? // NetBox platform slug (e.g. routeros, ios)
  model         String
  osVersion     String?
  status        String   @default("inactive")
  location      String?
  site          String?
  role          String?
  serial        String?
  assetTag      String?
  description   String?
  snmpVersion   String?
  snmpCommunity String?
  snmpPort      Int?
  sshPort       Int?
  credUsername  String?
  credPasswordEnc String?
  credUpdatedAt DateTime?

  isProduction  Boolean  @default(false)
  jumpserverId  String?
  customData    String?  // JSON string for extra metadata

  backupEnabled Boolean  @default(false)
  monitoringEnabled Boolean @default(false)
  snmpStatus    String?  // "ok", "error", "unknown"
  lastSnmpOk    DateTime?
  sshStatus     String?  // "ok", "error", "auth_error", "timeout", "unknown"
  lastSshOk     DateTime?
  // checkmkStatus String?  // DEPRECATED - substituído por libreNmsStatus
  // lastCheckmkCheck DateTime?  // DEPRECATED
  libreNmsId    Int?     // ID do device no LibreNMS
  libreNmsStatus String?  // "up", "down", "disabled", "ignored"
  lastLibreNmsCheck DateTime?
  libreNmsUptime Int?     // Uptime em segundos
  oxidizedProxyId Int?
  oxidizedProxy   OxidizedProxy? @relation(fields: [oxidizedProxyId], references: [id])
  discoveredInterfaces DiscoveredInterface[]
  discoveredBgpPeers   DiscoveredBgpPeer[]
  sshSessions  SshSession[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Application {
  id          Int      @id @default(autoincrement())
  tenantId    Int
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  name        String
  url         String
  apiKey      String
  status      String   @default("disconnected")
  description String?
  config      String?  // JSON string for app-specific configs (Oxidized interval, timeout, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AsnRegistry {
  id    Int    @id @default(autoincrement())
  asn   Int    @unique
  name  String
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    String?
  userRole  String?
  tenantId  Int?
  action    String
  details   String?
}

// Resultado de descoberta de interfaces via SNMP
model DiscoveredInterface {
  id           Int      @id @default(autoincrement())
  tenantId     Int
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  deviceId     Int
  device       Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  deviceName   String
  ifIndex      String
  ifName       String
  ifDesc       String?
  ifType       Int
  discoveredAt DateTime @default(now())

  @@index([deviceId])
}

// Resultado de descoberta de peers BGP via SNMP
model DiscoveredBgpPeer {
  id           Int      @id @default(autoincrement())
  tenantId     Int
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  deviceId     Int
  device       Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  deviceName   String
  ipPeer       String
  asn          Int
  asnName      String?
  localAsn     Int?
  name         String?
  vrfName      String?
  discoveredAt DateTime @default(now())

  @@index([deviceId])
}

model SshSession {
  id         Int       @id @default(autoincrement())
  sessionKey String    @unique
  userId     Int?
  user       User?     @relation(fields: [userId], references: [id])
  tenantId   Int?
  tenant     Tenant?   @relation(fields: [tenantId], references: [id])
  deviceId   Int
  device     Device    @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  deviceName String
  deviceIp   String
  status     String    @default("pending")
  startedAt  DateTime  @default(now())
  endedAt    DateTime?
  durationMs Int?
  logPath    String?
  reason     String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([tenantId])
  @@index([userId])
  @@index([deviceId])
}

// Oxidized Proxy - para gestão de proxies distribuídos
model OxidizedProxy {
  id          Int      @id @default(autoincrement())
  name        String
  siteId      String   @unique  // identificador único do proxy
  tenantId    Int
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  endpoint    String?  // http://ip:8888 - preenchido após registro
  apiKey      String   // gerado automaticamente
  gitRepoUrl  String?
  status      String   @default("pending") // pending, active, offline
  lastSeen    DateTime?
  deviceCount Int      @default(0)
  interval    Int      @default(1800) // intervalo de backup em segundos (padrão: 30 min)
  devices     Device[]
  logs        OxidizedProxyLog[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Logs de eventos dos proxies
model OxidizedProxyLog {
  id        Int      @id @default(autoincrement())
  proxyId   Int
  proxy     OxidizedProxy @relation(fields: [proxyId], references: [id], onDelete: Cascade)
  event     String   // backup_success, backup_fail, push_ok, push_fail
  device    String?
  message   String?
  createdAt DateTime @default(now())

  @@index([proxyId])
}
